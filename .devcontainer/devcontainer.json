{
    // This file is only used in Codespaces. If you are developing locally, you can remove the .devcontainer directory without consequences

    "image": "mcr.microsoft.com/devcontainers/javascript-node:0-18-bullseye",

    "hostRequirements": {
      "cpus": 4,
      "memory": "4gb",
      "storage": "32gb"
    },

    // Use 'postCreateCommand' to run commands after the container is created.
    "postCreateCommand": "wget -qO- https://github.com/duckdb/duckdb/releases/latest/download/duckdb_cli-linux-amd64.zip | funzip > /usr/local/bin/duckdb && chmod +x /usr/local/bin/duckdb && npm install && npm run sources && rm -rf .vscode",
    // Configure tool-specific properties
    "customizations": {
      "vscode": {
        "extensions": [
          // "GitHub.codespaces",
          "evidence.evidence-vscode",
          "svelte.svelte-vscode"
        ]
      }
    },
    "forwardPorts": [3000, 4213]
  }